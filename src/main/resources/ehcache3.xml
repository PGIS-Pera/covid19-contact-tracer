<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd
							http://www.ehcache.org/v3/jsr107 https://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <!--1. userDetails-->
    <cache alias="userDetails">
        <expiry>
            <ttl unit="seconds">60000</ttl>
        </expiry>
        <heap unit="entries">4000</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--2. user-->
    <cache alias="user">
        <expiry>
            <ttl unit="seconds">6000</ttl>
        </expiry>
        <heap unit="entries">400</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--3. role-->
    <cache alias="role">
        <expiry>
            <ttl unit="seconds">6000</ttl>
        </expiry>
        <heap unit="entries">400</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--4. patient-->
    <cache alias="patient">
        <expiry>
            <ttl unit="seconds">60000</ttl>
        </expiry>
        <heap unit="entries">20000</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--5. district-->
    <cache alias="district">
        <expiry>
            <ttl unit="seconds">60000</ttl>
        </expiry>
        <heap unit="entries">25</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--6. gramaniladhari-->
    <cache alias="gramaNiladhari">
        <expiry>
            <ttl unit="seconds">60000</ttl>
        </expiry>
        <heap unit="entries">14022</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>
    <!--7. dsOffice-->
    <cache alias="dsOffice">
        <expiry>
            <ttl unit="seconds">60000</ttl>
        </expiry>
        <heap unit="entries">14022</heap>
        <jsr107:mbeans enable-statistics="true"/>
    </cache>

</config>